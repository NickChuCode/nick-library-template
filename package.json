{
  "name": "nick-library-template",
  "version": "0.0.0-development",
  "description": "a template for building an open source library",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --ignore *.test.js --out-dir dist src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "lint": "eslint src",
    "watch:test": "mocha --watch",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "validateWithoutNpmRunAll": "npm run lint && npm run test",
    "validate": "npm-run-all --parallel lint test build",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NickChuCode/nick-library-template.git"
  },
  "keywords": [
    "template"
  ],
  "files": [
    "dist"
  ],
  "author": "Nick Chu <nickchu15@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NickChuCode/nick-library-template/issues"
  },
  "homepage": "https://github.com/NickChuCode/nick-library-template#readme",
  "dependencies": {
    "unique-random-array": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "commitizen": "^3.0.5",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "3.2.0",
    "eslint-config-kentcdodds": "^9.0.0",
    "ghooks": "^2.0.4",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "semantic-release": "^4.2.1",
    "validate-commit-msg": "^2.14.0",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  },
  "nyc": {
    "check-coverage": true,
    "functions": 100,
    "lines": 100,
    "branches": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "instrument": false,
    "sourceMap": false,
    "require": [
      "babel-register"
    ],
    "include": [
      "src"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
